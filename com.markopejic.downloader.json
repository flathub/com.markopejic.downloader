{
    "id": "com.markopejic.downloader",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.10",
    "command": "media-downloader",
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-download"
    ],
    "cleanup" : [
        "/man",
        "*.a"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "build-options": {
        "env": [
            "BASEAPP_REMOVE_WEBENGINE=1",
            "BASEAPP_DISABLE_NUMPY=1"
        ]
    },
    "modules": [
        "python3-yt-dlp.json",
        {
            "name": "ffmpeg",
            "buildsystem": "simple",
            "build-commands": [
                "mv bin/ffmpeg bin/ffprobe $FLATPAK_DEST/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2026-02-10-15-18/ffmpeg-N-122697-gfcfb33922f-linux64-gpl.tar.xz",
                    "sha256": "7547757f1279fd5eb673e071db46339a548e6de092ccd0639cbaf7a9d9007457",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2026-02-10-15-18/ffmpeg-N-122697-gfcfb33922f-linuxarm64-gpl.tar.xz",
                    "sha256": "b90398b9fefd03d59bc525b2e2560888f239eaaf34d969d8bb18cf0803c62f22",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "deno",
            "buildsystem": "simple",
            "build-commands": [
                "mv * $FLATPAK_DEST/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/denoland/deno/releases/download/v2.6.9/deno-x86_64-unknown-linux-gnu.zip",
                    "sha256": "8a677a4b0cea1a25aaecfc70d6c6a288f9ad69af0a92e9e9d513cabaaf3c688f",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/denoland/deno/releases/download/v2.6.9/deno-aarch64-unknown-linux-gnu.zip",
                    "sha256": "d1cd2f5f08abdc22156b67fc1cd9e8dcd2e8e3ab5caffe1da603992c8b1b5d67",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "com.markopejic.downloader",
            "buildsystem": "simple",
            "build-commands": [
                "install -D resources/linux/com.markopejic.downloader.desktop $FLATPAK_DEST/share/applications/com.markopejic.downloader.desktop",
                "install -D resources/linux/com.markopejic.downloader.metainfo.xml $FLATPAK_DEST/share/metainfo/com.markopejic.downloader.metainfo.xml",
                "install -D resources/icon.svg $FLATPAK_DEST/share/icons/hicolor/scalable/apps/com.markopejic.downloader.svg",
                "install -D resources/icon.png $FLATPAK_DEST/share/icons/hicolor/512x512/apps/com.markopejic.downloader.png",
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} --compile . --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/markop404/media-downloader/",
                    "commit": "334b696bb5951ee29da677511efeef01b017934e"
                }
            ]
        }
    ]
}
