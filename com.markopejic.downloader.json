{
    "id": "com.markopejic.downloader",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.9",
    "command": "media-downloader",
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-download"
    ],
    "cleanup" : [
        "/man",
        "*.a"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "build-options": {
        "env": [
            "BASEAPP_REMOVE_WEBENGINE=1",
            "BASEAPP_DISABLE_NUMPY=1"
        ]
    },
    "modules": [
        "python3-yt-dlp.json",
        {
            "name": "ffmpeg",
            "buildsystem": "simple",
            "build-commands": [
                "mv bin/* $FLATPAK_DEST/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2025-10-13-14-53/ffmpeg-N-121425-g0bc54cddb1-linux64-gpl.tar.xz",
                    "sha256": "dddf91717bd09f034efa067acec7304e100fbd4abd6011c5bbbb2ff01bc91e09",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2025-10-13-14-53/ffmpeg-N-121425-g0bc54cddb1-linuxarm64-gpl.tar.xz",
                    "sha256": "c960078c27e01cebcce38e28ec77290899793afea7c5e2d40a83deda1c1f3203",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "com.markopejic.downloader",
            "buildsystem": "simple",
            "build-commands": [
                "install -D flatpak/com.markopejic.downloader.desktop $FLATPAK_DEST/share/applications/com.markopejic.downloader.desktop",
                "install -D flatpak/com.markopejic.downloader.metainfo.xml $FLATPAK_DEST/share/metainfo/com.markopejic.downloader.metainfo.xml",
                "install -D icons/icon.png $FLATPAK_DEST/share/icons/hicolor/512x512/apps/com.markopejic.downloader.png",
                "install -D main.py $FLATPAK_DEST/bin/media-downloader",
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} --compile . --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/markop404/media-downloader/",
                    "commit": "c6a9a84e7de4b9c27793fd384b2b3909bf8d9954"
                }
            ]
        }
    ]
}
