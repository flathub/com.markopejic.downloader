{
    "id": "com.markopejic.downloader",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.10",
    "command": "media-downloader",
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-download"
    ],
    "cleanup" : [
        "/man",
        "*.a"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "build-options": {
        "env": [
            "BASEAPP_REMOVE_WEBENGINE=1",
            "BASEAPP_DISABLE_NUMPY=1"
        ]
    },
    "modules": [
        "python3-yt-dlp.json",
        {
            "name": "ffmpeg",
            "buildsystem": "simple",
            "build-commands": [
                "mv bin/ffmpeg bin/ffprobe $FLATPAK_DEST/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2026-01-30-14-42/ffmpeg-N-122604-gde3f99d74b-linux64-gpl.tar.xz",
                    "sha256": "8d3d79d3a5463ca1121b764797eef4c3b86b8306327a91e93aaf4867a61b3664",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2026-01-30-14-42/ffmpeg-N-122604-gde3f99d74b-linuxarm64-gpl.tar.xz",
                    "sha256": "8be0a65cff0d9c3a8bcbf5e314a44594f6d1eb6f26cd02bdf57c8a6cba5d4209",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "deno",
            "buildsystem": "simple",
            "build-commands": [
                "mv * $FLATPAK_DEST/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/denoland/deno/releases/download/v2.6.7/deno-x86_64-unknown-linux-gnu.zip",
                    "sha256": "d2aedfa8c73e258cce78dc80e8d0e764a69d4a09d946d32f0c29eef46592b82f",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/denoland/deno/releases/download/v2.6.7/deno-x86_64-unknown-linux-gnu.zip",
                    "sha256": "c5626c9ee10e87201706fc5e64ed5a44b31527d98c130f164e149e1477c0a87d",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "com.markopejic.downloader",
            "buildsystem": "simple",
            "build-commands": [
                "install -D resources/linux/com.markopejic.downloader.desktop $FLATPAK_DEST/share/applications/com.markopejic.downloader.desktop",
                "install -D resources/linux/com.markopejic.downloader.metainfo.xml $FLATPAK_DEST/share/metainfo/com.markopejic.downloader.metainfo.xml",
                "install -D resources/icon.svg $FLATPAK_DEST/share/icons/hicolor/scalable/apps/com.markopejic.downloader.svg",
                "install -D resources/icon.png $FLATPAK_DEST/share/icons/hicolor/512x512/apps/com.markopejic.downloader.png",
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} --compile . --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/markop404/media-downloader/",
                    "tag": "v5.0.2"
                }
            ]
        }
    ]
}
